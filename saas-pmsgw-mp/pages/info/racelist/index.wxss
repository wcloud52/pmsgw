/**index.wxss**/
page {
  background: #f5f5f5;
  font-size: 28rpx;
  color: #333333;
  min-height: 100vh;
}
.title{
  text-align: center;
  padding: 40rpx 0 20rpx 0;
  font-size: 36rpx;
  font-weight: bold;
}
.left-title{
  padding: 10rpx 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.search{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.selcet-search{
  padding-left: 30rpx;
}
.search-input-wrap{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  width: 608rpx;
  height: 68rpx;
  border-radius: 34rpx; 
}
.select-wrap{
  border-radius: 0;
}
.select-wrap  .search-input{
  padding-left: 20rpx;
}
.search-icon{
  width: 48rpx;
  height: 48rpx;
  margin: 0 15rpx;
}
.search-input{
  width: 452rpx;
  height: 100%;
}
.input-placeholder{
  color: #999;
}
.search-btn{
  color: #018AFE;
  padding-right: 20rpx;
}
.table-wrap{
  background: #fff;
  margin: 10rpx 30rpx;
  width: calc(100vw - 60rpx);
}
.table{
  width: 1530rpx;
  height: 500rpx;
   box-sizing: content-box;
}
.table .tr {
  display: flex;
  border-right: 1px solid #999;
  
}
.table .tr > view:last-of-type{
  width: 112rpx;
}
.table .tr .th{
   box-sizing: content-box;            
  border-left: 1px solid #999;
}

.table .tr .th .th-top{
   box-sizing: content-box;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  border-top: 1px solid #999;
}
.table .tr .th .th-bottom{
  display: flex;
   box-sizing: content-box;
 
}
.table .tr .th .th-bottom view{
   box-sizing: content-box;
  border-left: 1px solid #999;
  border-top: 1px solid #999;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.table .tr .th .th-bottom view:first-of-type{
  border-left: none;
}
.table .tr .td{
   box-sizing: content-box;
  border-left: 1px solid #999;
  /* display: flex;
  justify-content: center;
  align-items: center; */
}
.table .tr .td .td-bottom{
  display: flex;
   box-sizing: content-box;
 
}
.table .tr .td .td-bottom view{
   box-sizing: content-box;
  border-left: 1px solid #999;
  border-top: 1px solid #999;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.table .tr .td .td-bottom view:first-of-type{
  border-left: none;
}
.table .tr .pl{
  width: 102rpx;
}
.table .tr .tf{
   box-sizing: content-box;
  border-left: 1px solid #999;
  border-bottom: 1px solid #999;
}
.table .tr .tf .tf-bottom{
  display: flex;
   box-sizing: content-box;
 
}
.table .tr .tf .tf-bottom view{
   box-sizing: content-box;
  border-left: 1px solid #999;
  border-top: 1px solid #999;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.table .tr .tf .tf-bottom view:first-of-type{
  border-left: none;
}
.table .tr .tf-total .tf-bottom view{
  width: 304rpx;
}
.table .tr .tf-pl{
  width: 102rpx;
}

/* 按钮 */
.button-wrap{
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
}
.other-button-hover{
  width: 300rpx;
}
.button-wrap button[type=primary]{
  background: #018AFE;
}
.tip{
  text-align: center;
  padding: 20rpx 0;
}